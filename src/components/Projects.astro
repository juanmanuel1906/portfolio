import LinkButton from "./LinkButton.astro";

const TAGS = {
  PYTHON: {
    name: "Python",
    class: "bg-white text-black",
    icon: Python,
  },
  ANGULAR: {
    name: "Angular",
    class: "bg-white text-black",
    icon: Angular,
  },
  PHP: {
    name: "",
    class: "bg-black text-white-500",
    icon: Php,
  },
  JS: {
    name: "JavaScript",
    class: "bg-white text-black",
    icon: Javascript,
  },
  HTML: {
    name: "HTML",
    class: "bg-white text-black",
    icon: HTML,
  },
  CSS: {
    name: "CSS",
    class: "bg-white text-black",
    icon: CSS,
  },
  NODE_JS: {
    name: "Node JS",
    class: "bg-white text-black",
    icon: NODE_JS,
  },
  ASTRO: {
    name: "Astro",
    class: "bg-white text-black",
    icon: ASTRO,
  },
};

const PROJECTS = [
  {
    title: "Navega Sin Ahogarte",
    link: "https://navegasinahogarte.com/",
    description:
      "Plataforma web para la promoción del bienestar digital en del departamento del Quindío. Incluye test de bienestar digital, posts de ansiedad digital anónimos, métricas y E-Learning.",
    image: "https://portfolio-nine-lovat-35.vercel.app/assets/img/nsa.jpg",
    tags: [TAGS.ANGULAR, TAGS.NODE_JS, TAGS.JS],
    year: "2025",
  },
  {
    title: "KAHP Legado Africano",
    link: "https://kahp.vercel.app/",
    description:
      "Landing Page acerca de KAHP, organización dedicada a preservar y promover el legado ancestral a través de la música, la danza, la educación y el bienestar.",
    image: "https://portfolio-nine-lovat-35.vercel.app/assets/img/kahp_preview.jpg",
    tags: [TAGS.ASTRO],
    year: "2025",
  },
  {
    title: "Pricing Pro",
    description:
      "Plataforma web para la gestión de precios, gestión de usuarios por roles, gestión de permisos y analítica dinámica.",
    image:
      "https://portfolio-nine-lovat-35.vercel.app/assets/img/pricing-pro.webp",
    tags: [TAGS.ANGULAR],
    year: "2025",
  },
  {
    title: "Visioner",
    description:
      "Basado en Planning Pro, para el mismo cliente pero con diferente interfaz y línea gráfica.",
    image:
      "https://portfolio-nine-lovat-35.vercel.app/assets/img/visioner.webp",
    tags: [TAGS.ANGULAR],
    year: "2024",
  },
  {
    title: "Planning Pro",
    description:
      "Plataforma web para la gestión de cementos, gestión de usuarios por roles, gestión de permisos y analítica dinámica.",
    image:
      "https://portfolio-nine-lovat-35.vercel.app/assets/img/planning-pro.webp",
    tags: [TAGS.ANGULAR, TAGS.PYTHON],
    year: "2022 - 2023",
  },
  {
    title: "Autenticación y Gestión",
    description:
      "He trabajado en diferentes proyectos de autenticación para la UGPP, Team Foods, además de implementar diferentes funcionalidades que permiten la gestión de archivos desde GCP",
    image:
      "https://portfolio-nine-lovat-35.vercel.app/assets/img/auth-ilustration.jpeg",
